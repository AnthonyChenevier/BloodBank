<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<!-- drink raw animal/non-humanlike blood -->
    <ThoughtDef>
        <defName>DrankRawBlood</defName>
        <showBubble>true</showBubble>
        <icon>Things/Mote/ThoughtSymbol/Food</icon>
        <durationDays>1</durationDays>
        <nullifyingTraits>
            <li>Cannibal</li>
            <li>Bloodlust</li>
        </nullifyingTraits>
        <stages>
            <li>
                <label>drank raw blood</label>
                <description>I drank the raw blood of some creature to survive. It wasn't very pleasant.</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
  

	<!-- drink raw humanlike blood -->
	<ThoughtDef>
		<defName>ConsumedHumanlikeBloodDirect</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
		<durationDays>1</durationDays>
		<nullifyingTraits>
			<li>Cannibal</li>
			<li>Bloodlust</li>
		</nullifyingTraits>
		<stages>
		  <li>
			<label>drank human blood</label>
			<description>I drank the blood of my own kind to survive. This is disgusting.</description>
			<baseMoodEffect>-10</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>ConsumedHumanlikeBloodDirectCannibal</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
		<durationDays>1</durationDays>
		<requiredTraits>
			<li>Cannibal</li>
		</requiredTraits>
		<nullifyingTraits>
			<li>Bloodlust</li>
		</nullifyingTraits>
		<stages>
		  <li>
			<label>drank human blood</label>
			<description>I drank the blood of my own kind. The taste pleased me, but it is not what I truly desire.</description>
			<baseMoodEffect>10</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef>

	<!-- ate humanlike blood in meal -->
	<ThoughtDef>
		<defName>ConsumedHumanlikeBloodAsIngredient</defName>
			<showBubble>true</showBubble>
			<icon>Things/Mote/ThoughtSymbol/Food</icon>
			<durationDays>1</durationDays>
		<nullifyingTraits>
			<li>Cannibal</li>
		</nullifyingTraits>
		<stages>
		  <li>
			<label>human blood in meal</label>
			<description>I ate a meal made with the blood of my own kind. This is horrible.</description>
			<baseMoodEffect>-5</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>ConsumedHumanlikeBloodAsIngredientCannibal</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
		<durationDays>1</durationDays>
		<requiredTraits>
			<li>Cannibal</li>
		</requiredTraits>
		<stages>
		  <li>
			<label>human blood in meal</label>
			<description>I ate a meal made with the blood of my own kind. The taste pleased me, but it is still not what I truly desire.</description>
			<baseMoodEffect>5</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef>

    <!-- insect blood -->
    <ThoughtDef>
        <defName>ConsumedInsectHemolymphDirect</defName>
        <showBubble>true</showBubble>
        <icon>Things/Mote/ThoughtSymbol/Food</icon>
        <durationDays>1</durationDays>
        <stages>
            <li>
                <label>drank insect hemolymph</label>
                <description>I drank some gray, slimy insect juices. It was, possibly, the most disgusting thing I've ever tasted.</description>
                <baseMoodEffect>-6</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>ConsumedInsectHemolymphAsIngredient</defName>
        <showBubble>true</showBubble>
        <icon>Things/Mote/ThoughtSymbol/Food</icon>
        <durationDays>1</durationDays>
        <stages>
            <li>
                <label>ate cooked insect hemolymph</label>
                <description>I ate a meal cooked from gray, slimy insect juices. The seasoning partly covered the taste, but the texture was just wrong.</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
	
	
	
	
	
	
	
	
	
	
	
	<!-- Easter Egg. Shhh! -->
	<ThoughtDef>
		<defName>ConsumedHumanlikeBloodDirectBloodlust</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
		<durationDays>0.25</durationDays>
		<requiredTraits>
			<li>Bloodlust</li>
		</requiredTraits>
		<stages>
		  <li>
			<label>drank human blood</label>
			<description>I drank the blood of my own kind. It reminds me of slaughter and the chaos of battle. I long to fight!</description>
			<baseMoodEffect>20</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef>
</Defs>
