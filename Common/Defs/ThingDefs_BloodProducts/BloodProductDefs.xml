<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <JobDef>
    <defName>UseBloodProduct</defName>
    <driverClass>JobDriver_UseItem</driverClass>
    <reportString>Administering transfusion.</reportString>
    <allowOpportunisticPrefix>true</allowOpportunisticPrefix>
  </JobDef>
  
  <!--=============== Medicine ====================-->

	<ThingDef Name="BloodProductBase" Abstract="True">
		<thingClass>ThingWithComps</thingClass>
		<category>Item</category>
		<useHitPoints>true</useHitPoints>
		<healthAffectsPrice>true</healthAffectsPrice>
		<selectable>true</selectable>
		<statBases>
			<MaxHitPoints>60</MaxHitPoints>
			<Mass>0.5</Mass>
			<Flammability>2</Flammability>
			<DeteriorationRate>6</DeteriorationRate>
			<Beauty>-4</Beauty>
		</statBases>
		
		<altitudeLayer>Item</altitudeLayer>
		<stackLimit>25</stackLimit>
		
		<thingCategories>
			<li>BloodProducts</li>
		</thingCategories>
		
		<alwaysHaulable>true</alwaysHaulable>
		
		<tickerType>Rare</tickerType>
		<comps>
			<li Class="CompProperties_Forbiddable" />
			<li Class="CompProperties_Rottable">
				<daysToRotStart>0.5</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
			<li Class="CompProperties_Drug">
				<listOrder>1000</listOrder>
				<overdoseSeverityOffset>0.08~0.14</overdoseSeverityOffset>
			</li>
		</comps>
		<pathCost>15</pathCost>
		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<drawGUIOverlay>true</drawGUIOverlay>
		<rotatable>false</rotatable>

		<uiIconForStackCount>1</uiIconForStackCount>
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<techLevel>Industrial</techLevel>
		<socialPropernessMatters>true</socialPropernessMatters>
		
		<ingestible>
			<preferability>NeverForNutrition</preferability>
			<maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
			<foodType>Processed, Fluid</foodType>
			<baseIngestTicks>300</baseIngestTicks>
			<chairSearchRadius>0</chairSearchRadius>
			<ingestHoldUsesTable>false</ingestHoldUsesTable>
			<ingestCommandString>Inject {0}</ingestCommandString>
			<ingestReportString>Injecting {0}.</ingestReportString>
			<nurseable>true</nurseable>
			<drugCategory>Medical</drugCategory>
			<ingestSound>Ingest_Inject</ingestSound>
			<!--ingestHoldOffsetStanding>
				<northDefault>
					<offset>(0.23,0,0.065)</offset>
				</northDefault>
			</ingestHoldOffsetStanding-->
		</ingestible>
		<recipeMaker>
			<workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
			<workSkill>Intellectual</workSkill>
			<effectWorking>Cook</effectWorking>
			<soundWorking>Recipe_CookMeal</soundWorking>
		</recipeMaker>
	</ThingDef>

	<ThingDef ParentName="BloodProductBase">
		<defName>ImmuneBooster_Human</defName>
		<label>immune booster shot</label>
		<description>An immune boosting compound in a sealed IV bag with attached hypodermic needle. Contains high concentrations of white blood cells and other immune boosting natural proteins derived from human blood to aid in combating natural diesease. Only works on humans.</description>
		<graphicData>
			<texPath>Things/Item/Resource/ImmuneBooster</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<drawSize>0.85</drawSize>
		</graphicData>
		<statBases>
			<MarketValue>20</MarketValue>
			<WorkToMake>700</WorkToMake>
		</statBases>
		<costList>
			<Blood_Human>5</Blood_Human>
			<Neutroamine>2</Neutroamine>
		</costList>
		<recipeMaker>
			<recipeUsers>
				<li>DrugLab</li>
			</recipeUsers>
			<researchPrerequisite>BloodRefining</researchPrerequisite>
			<skillRequirements>
				<Crafting>4</Crafting>
				<Intellectual>4</Intellectual>
			</skillRequirements>
		</recipeMaker>
		<ingestible>
			<outcomeDoers>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>ImmuneBooster_Hediff</hediffDef>
					<severity>1</severity>
				</li>
			</outcomeDoers>
		</ingestible>
	</ThingDef>

