<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThoughtDef>
		<defName>donatedBloodGood</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/GenericGood</icon>
		<stackLimit>5</stackLimit>
		<durationDays>2</durationDays>
		<stages>
			<li>
				<label>happy to donate blood</label>
				<description>I donated blood for the good of the colony. I want a lollipop!</description>
				<baseMoodEffect>2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>donatedBloodBad</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/GenericBad</icon>
		<stackLimit>5</stackLimit>
		<durationDays>2</durationDays>
		<stages>
			<li>
				<label>unwisely donated blood</label>
				<description>I donated blood when I was low and now I feel sick and light-headed.</description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
			<li>
				<label>stole my blood</label>
				<description>They took my blood without my permission! Damn them!</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>knowStoleBlood</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/GenericBad</icon>
		<stackLimit>1</stackLimit>
		<durationDays>2</durationDays>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
			<li>Cannibal</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>stole someone's blood</label>
				<description>We used a blood 'donor' who wasn't strictly a volunteer. Feels a bit dirty. </description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
</Defs>
